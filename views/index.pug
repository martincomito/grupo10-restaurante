extends layout

block content
    
  style.
    .bienvenida {
      text-align: center;
    }
    .modulos {
      display: flex;
      gap: 30px;
      margin-top: 40px;
      justify-content: center;
    }
    .modulo {
      background-color: #f8f9fa;
      padding: 30px;
      border-radius: 8px;
      border: 1px solid #e0e0e0;
      min-width: 300px;
    }
    .modulo h3 {
      color: #007bff;
      margin-bottom: 15px;
    }
    .modulo p {
      margin-bottom: 20px;
      color: #666;
    }
    .modulo .boton {
      margin: 5px;
    }
