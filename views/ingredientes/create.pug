extends ../layout

block content
  h2 Agregar Nuevo Ingrediente
  
  form(method="POST", action="/ingredientes")
    .fila-formulario
      .grupo-formulario
        label(for="nombre") Nombre:
        input(type="text", id="nombre", name="nombre", required)
      
      .grupo-formulario
        label(for="categoria") Categoría:
        select(id="categoria", name="categoria", required)
          option(value="") Seleccionar categoría
          option(value="Vegetales") Vegetales
          option(value="Carnes") Carnes
          option(value="Granos") Granos
          option(value="Frutas") Frutas
          option(value="Lácteos") Lácteos
          option(value="Condimentos") Condimentos
          option(value="Otros") Otros
    
    .fila-formulario
      .grupo-formulario
        label(for="cantidad") Cantidad:
        input(type="number", id="cantidad", name="cantidad", min="0", step="0.01", required)
      
      .grupo-formulario
        label(for="unidad") Unidad:
        select(id="unidad", name="unidad", required)
          option(value="") Seleccionar unidad
          option(value="kg") Kilogramos (kg)
          option(value="g") Gramos (g)
          option(value="l") Litros (l)
          option(value="ml") Mililitros (ml)
          option(value="unidad") Unidad
          option(value="paquete") Paquete
    
    .fila-formulario
      .grupo-formulario
        label(for="precio") Precio:
        input(type="number", id="precio", name="precio", min="0", step="0.01", required)
      
      .grupo-formulario
        label(for="fechaVencimiento") Fecha de Vencimiento:
        input(type="date", id="fechaVencimiento", name="fechaVencimiento", required)
    
    .acciones-formulario
      button.boton.boton-exito(type="submit") Crear Ingrediente
      a.boton.boton-principal(href="/ingredientes") Cancelar

  style.
    .acciones-formulario {
      margin-top: 20px;
      text-align: center;
    }
