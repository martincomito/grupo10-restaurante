extends ../layout

block content
  h2 Agregar Nuevo Proveedor
  
  form(method="POST", action="/proveedores")
    .grupo-formulario
      label(for="nombre") Nombre de la Empresa:
      input(type="text", id="nombre", name="nombre", required)
    
    .fila-formulario
      .grupo-formulario
        label(for="contacto") Persona de Contacto:
        input(type="text", id="contacto", name="contacto", required)
      
      .grupo-formulario
        label(for="telefono") Teléfono:
        input(type="tel", id="telefono", name="telefono", required)
    
    .grupo-formulario
      label(for="email") Email:
      input(type="email", id="email", name="email", required)
    
    .grupo-formulario
      label(for="direccion") Dirección:
      textarea(id="direccion", name="direccion", rows="3", required)
    
    .grupo-formulario
      label(for="productos") Productos (separados por comas):
      input(type="text", id="productos", name="productos", placeholder="Ej: Vegetales, Frutas, Carnes")
    
    .grupo-formulario
      label(for="activo") Estado:
      select(id="activo", name="activo", required)
        option(value="true", selected) Activo
        option(value="false") Inactivo
    
    .acciones-formulario
      button.boton.boton-exito(type="submit") Crear Proveedor
      a.boton.boton-principal(href="/proveedores") Cancelar

  style.
    .acciones-formulario {
      margin-top: 20px;
      text-align: center;
    }
