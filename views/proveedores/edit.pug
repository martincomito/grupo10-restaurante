extends ../layout

block content
  h2 Editar Proveedor
  
  form(method="POST", action=`/proveedores/${proveedor.id}`)
    input(type="hidden", name="_method", value="PUT")
    .grupo-formulario
      label(for="nombre") Nombre de la Empresa:
      input(type="text", id="nombre", name="nombre", value=proveedor.nombre, required)
    
    .fila-formulario
      .grupo-formulario
        label(for="contacto") Persona de Contacto:
        input(type="text", id="contacto", name="contacto", value=proveedor.contacto, required)
      
      .grupo-formulario
        label(for="telefono") Teléfono:
        input(type="tel", id="telefono", name="telefono", value=proveedor.telefono, required)
    
    .grupo-formulario
      label(for="email") Email:
      input(type="email", id="email", name="email", value=proveedor.email, required)
    
    .grupo-formulario
      label(for="direccion") Dirección:
      textarea(id="direccion", name="direccion", rows="3", required)= proveedor.direccion
    
    .grupo-formulario
      label(for="productos") Productos (separados por comas):
      input(type="text", id="productos", name="productos", value=proveedor.productos ? proveedor.productos.join(', ') : '', placeholder="Ej: Vegetales, Frutas, Carnes")
    
    .grupo-formulario
      label(for="activo") Estado:
      select(id="activo", name="activo", required)
        option(value="true", selected=proveedor.activo) Activo
        option(value="false", selected=!proveedor.activo) Inactivo
    
    .acciones-formulario
      button.boton.boton-exito(type="submit") Actualizar Proveedor
      a.boton.boton-principal(href="/proveedores") Cancelar

  style.
    .acciones-formulario {
      margin-top: 20px;
      text-align: center;
    }
